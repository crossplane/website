{
  "include": [
    "./src/**/*",
    "./*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom"
  ],
  "compilerOptions": {
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "es2019",
      "dom"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "outDir": ".tmp",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2016",
    "typeRoots": [
      "./typings",
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  }
}
